<%- include('partials/header') %>

<main>
  <section class="sec-padding hero-sec">
    <h1 class="text-center">
      Welcome <span class="color-sec"><%= user.name %> </span> to podcast
      Details page
    </h1>
  </section>
  <section class="sec-padding">
    <h2 class="text-center"><%= podcast.name %></h2>

    <div class="flex center sec-padding">
      <div class="podcastDetails card">
        <div class="img-div">
          <img src="<%= podcast.image %> " alt="image" class="flexi-img" />
        </div>
        <div>
          <h3 class="text-center">
            Created By:-
            <span class="color-pri"> <%= podcast.createdBy.name %></span>
          </h3>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
