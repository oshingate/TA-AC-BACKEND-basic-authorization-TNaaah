<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      src="https://kit.fontawesome.com/7c7efbb78c.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Baloo+Tammudu+2:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="flex container jsb">
        <strong>Blog-App</strong>
        <div class="flex">
          <a href="/blogs/new" class="btn btn-pri">create Blog</a>
          <a href="/blogs/list" class="btn btn-pri">List of Blog</a>
          <a href="/users/logout" class="btn btn-pri">Logout</a>
        </div>
      </div>
    </header>
    <main>
      <section class="sec-padding">
        <div class="container hero-sec">
          <h2 class="text-center">Blog Details</h2>
        </div>
      </section>
      <section class="sec-padding flex center">
        <div class="container">
          <article class="blog-details">
            <h3>title:- <%= blog.title %></h3>
            <h4>Description:- <%= blog.description %></h4>
            <div class="flex jsb">
              <h6>likes :- <%= blog.likes %></h6>
              <div>
                <a href="/blogs/<%= blog.slug  %>/likes/inc" class="color-pri"
                  ><i class="fas fa-thumbs-up"></i
                ></a>
                <a href="/blogs/<%= blog.slug  %>/likes/dec" class="color-sec"
                  ><i class="fas fa-thumbs-down"></i
                ></a>
              </div>
            </div>
            <h4>Author:- <%= blog.author.fullName %></h4>
          </article>
        </div>
      </section>
      <section class="sec-padding">
        <div class="container">
          <form action="/blogs/<%= blog.slug  %>/comment/new" method="POST">
            <input type="text" placeholder="Comment" name="title" />
            <a href="#" class=""
              ><button type="submit" class="btn btn-pri">Submit</button></a
            >
          </form>
        </div>
      </section>
      <section class="sec-padding">
        <div class="container">
          <% if(blog.comments.length!==0){ %> <% blog.comments.forEach(ele=>{ %>
          <article class="comment-card">
            <h4><%= ele.title %></h4>
            <h5>
              Commented by:- <span class="color-sec"><%= ele.author %> </span>
            </h5>
            <a href="/comment/<%= ele.id  %>/edit" class="btn btn-pri">Edit</a>
            <a href="/comment/<%= ele.id  %>/delete" class="btn btn-sec"
              >Delete</a
            >
          </article>
          <% }) %> <% } %>
        </div>
      </section>
    </main>
  </body>
</html>
